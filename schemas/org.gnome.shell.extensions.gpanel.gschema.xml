<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gpanel">
  <schema id="org.gnome.shell.extensions.gpanel" path="/org/gnome/shell/extensions/gpanel/">
    <!-- Panel Settings -->
    <key name="panel-height" type="i">
      <default>32</default>
      <summary>Panel Height</summary>
      <description>Height of the top panel in pixels</description>
    </key>
    <key name="panel-opacity" type="i">
      <default>200</default>
      <summary>Panel Opacity</summary>
      <description>Opacity of the panel background (0-255)</description>
    </key>
    <key name="blur-effect" type="b">
      <default>true</default>
      <summary>Enable Blur</summary>
      <description>Enable background blur effect</description>
    </key>

    <!-- Notch Settings -->
    <key name="show-notch" type="b">
      <default>true</default>
      <summary>Show Notch</summary>
      <description>Enable the notch visual behind the clock</description>
    </key>
    <key name="notch-width" type="i">
      <default>160</default>
      <summary>Notch Width</summary>
      <description>Width of the notch in pixels</description>
    </key>

    <!-- Feature Toggles -->
    <key name="show-traffic-lights" type="b">
      <default>true</default>
      <summary>Show Traffic Lights</summary>
      <description>Show simulated window control buttons</description>
    </key>
    <key name="show-app-menu" type="b">
      <default>true</default>
      <summary>Show App Menu</summary>
      <description>Show the application menu next to the logo</description>
    </key>
    <key name="enable-global-menu" type="b">
      <default>true</default>
      <summary>Enable Global Menu</summary>
      <description>Attempt to load global menus (File, Edit, etc.) via DBus</description>
    </key>

    <!-- Dock Settings -->
    <key name="enable-dock" type="b">
      <default>true</default>
      <summary>Enable Dock</summary>
      <description>Show the macOS-style dock at the bottom</description>
    </key>
    <key name="dock-icon-size" type="i">
      <default>48</default>
      <summary>Dock Icon Size</summary>
      <description>Size of dock icons in pixels</description>
    </key>
    <key name="dock-autohide" type="b">
      <default>false</default>
      <summary>Dock Autohide</summary>
      <description>Hide dock when overlapped by windows</description>
    </key>
  </schema>
</schemalist>
